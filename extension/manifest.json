{
  "manifest_version": 3,
  "name": "Alpha Date Auto Login",
  "version": "1.0.0",
  "description": "Helps to login to the chance bot",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://alpha.date/*",
    "https://www.alpha-bot.date/*",
    "https://alpha-date-automation-depl.onrender.com/*",
    "http://localhost:5173/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Alpha Date login"
  },
  "content_scripts": [
    {
      "matches": [
        "https://alpha-date-automation-depl.onrender.com/*",
        "https://www.alpha-bot.date/*",
        "http://localhost:5173/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}